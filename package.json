{
  "name": "graphql-subscription-pubsub",
  "version": "1.0.0",
  "description": "A project demonstrating a pub/sub model using Apollo Server Subscriptions, where users can subscribe to news categories and receive real-time notifications when an admin posts news in their subscribed category.",
  "author": "Manan Kansara",
  "keywords": [
    "nodejs",
    "graphql",
    "nodejs-graphql",
    "pubsub",
    "subscriptions",
    "publish-subscribe",
    "realtime-notifications",
    "apollo-server",
    "apollo-subscriptions"
  ],
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@graphql-tools/schema": "^10.0.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-middleware": "^6.1.35",
    "graphql-shield": "^7.6.5",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.16.0",
    "jsonwebtoken": "^9.0.2",
    "migrate-mongo": "^11.0.0",
    "moment": "^2.30.1",
    "mongoose": "^8.6.1",
    "validator": "^13.12.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  }
}